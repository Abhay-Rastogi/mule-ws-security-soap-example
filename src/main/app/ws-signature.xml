<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns:pattern="http://www.mulesoft.org/schema/mule/pattern" xmlns:ws="http://www.mulesoft.org/schema/mule/ws"
   xmlns:mulexml="http://www.mulesoft.org/schema/mule/xml" xmlns:cxf="http://www.mulesoft.org/schema/mule/cxf"
   xmlns:http="http://www.mulesoft.org/schema/mule/http" xmlns:servlet="http://www.mulesoft.org/schema/mule/servlet"
   xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
   xmlns:spring="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.mulesoft.org/schema/mule/pattern http://www.mulesoft.org/schema/mule/pattern/current/mule-pattern.xsd
http://www.mulesoft.org/schema/mule/xml http://www.mulesoft.org/schema/mule/xml/current/mule-xml.xsd
http://www.mulesoft.org/schema/mule/cxf http://www.mulesoft.org/schema/mule/cxf/current/mule-cxf.xsd
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
http://www.mulesoft.org/schema/mule/servlet http://www.mulesoft.org/schema/mule/servlet/current/mule-servlet.xsd
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd
http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/ws http://www.mulesoft.org/schema/mule/ws/current/mule-ws.xsd">

   <flow name="WS-Signature-CodeFirst-HTTP-Listener">
      <http:listener config-ref="Listener-Application" doc:name="HTTP Inbound Endpoint"
         path="${endpoint.signature.codeFirst.path}" />
      <flow-ref name="WS-Signature-CodeFirst-Endpoint" doc:name="Send to endpoint" />
   </flow>
   <sub-flow name="WS-Signature-CodeFirst-Endpoint">
      <logger message="Begins the signed Code-First endpoint flow" level="INFO"
         doc:name="Logger" />
      <cxf:jaxws-service validationEnabled="${endpoint.validation}"
         doc:name="Code-First endpoint interface" serviceClass="${endpoint.codeFirst.interface}"
         namespace="${wsdl.namespace}">
         <cxf:ws-security>
            <cxf:ws-config>
               <cxf:property key="action" value="UsernameToken Signature" />
               <cxf:property key="signaturePropFile" value="${security.signature.properties}" />
               <cxf:property key="passwordCallbackRef" value-ref="passwordCallbackHandler" />
            </cxf:ws-config>
         </cxf:ws-security>
      </cxf:jaxws-service>
      <component doc:name="Code-First endpoint implementation">
         <spring-object bean="codeFirstUnsecureEndpoint" />
      </component>
      <logger message="Ends the signed Code-First endpoint flow" level="INFO"
         doc:name="Logger" />
   </sub-flow>

   <flow name="WS-Signature-WSDLFirst-HTTP-Listener">
      <http:listener config-ref="Listener-Application" doc:name="HTTP Inbound Endpoint"
         path="${endpoint.signature.wsdlFirst.path}" />
      <flow-ref name="WS-Signature-WSDLFirst-Endpoint" doc:name="Send to endpoint" />
   </flow>
   <sub-flow name="WS-Signature-WSDLFirst-Endpoint">
      <logger message="Begins the signed WSDL-First endpoint flow" level="INFO"
         doc:name="Logger" />
      <cxf:jaxws-service validationEnabled="${endpoint.validation}"
         doc:name="WSDL-First endpoint interface" serviceClass="${endpoint.wsdlFirst.interface}"
         namespace="${wsdl.namespace}" wsdlLocation="${wsdl.path}" service="${wsdl.service}">
         <cxf:ws-security>
            <cxf:ws-config>
               <cxf:property key="action" value="UsernameToken Signature" />
               <cxf:property key="signaturePropFile" value="${security.signature.properties}" />
               <cxf:property key="passwordCallbackRef" value-ref="passwordCallbackHandler" />
            </cxf:ws-config>
         </cxf:ws-security>
      </cxf:jaxws-service>
      <component doc:name="WSDL-First endpoint implementation">
         <spring-object bean="wsdlFirstUnsecureEndpoint" />
      </component>
      <logger message="Ends the signed WSDL-First endpoint flow" level="INFO"
         doc:name="Logger" />
   </sub-flow>

   <flow name="WS-Signature-Simple-HTTP-Listener">
      <http:listener config-ref="Listener-Application"
         path="${endpoint.signature.simple.path}" doc:name="HTTP Inbound Endpoint" />
      <flow-ref name="WS-Signature-Simple-Endpoint" doc:name="Send to endpoint" />
   </flow>
   <sub-flow name="WS-Signature-Simple-Endpoint">
      <logger message="Begins the signed simple endpoint flow" level="INFO"
         doc:name="Logger" />
      <cxf:simple-service serviceClass="${endpoint.simple.class}"
         service="${wsdl.service}" doc:name="Simple endpoint">
         <cxf:ws-security>
            <cxf:ws-config>
               <cxf:property key="action" value="UsernameToken Signature" />
               <cxf:property key="signaturePropFile" value="${security.signature.properties}" />
               <cxf:property key="passwordCallbackRef" value-ref="passwordCallbackHandler" />
            </cxf:ws-config>
         </cxf:ws-security>
      </cxf:simple-service>
      <component doc:name="Simple endpoint implementation">
         <spring-object bean="simpleUnsecureEndpoint" />
      </component>
      <logger message="Ends the signed simple endpoint flow" level="INFO"
         doc:name="Logger" />
   </sub-flow>

   <flow name="WS-Signature-Proxy-HTTP-Listener">
      <http:listener config-ref="Listener-Application" doc:name="HTTP Inbound Endpoint"
         path="${endpoint.signature.proxy.path}" />
      <flow-ref name="WS-Signature-Proxy-Endpoint" doc:name="Send to endpoint" />
   </flow>
   <sub-flow name="WS-Signature-Proxy-Endpoint">
      <logger message="Begins the signed proxy endpoint flow" level="INFO"
         doc:name="Logger" />
      <cxf:proxy-service namespace="${wsdl.namespace}"
         payload="envelope" port="${wsdl.port}" service="${wsdl.service}"
         doc:name="Proxy endpoint" wsdlLocation="${wsdl.path}"
         enableMuleSoapHeaders="false">
         <cxf:ws-security>
            <cxf:ws-config>
               <cxf:property key="action" value="UsernameToken Signature" />
               <cxf:property key="signaturePropFile" value="${security.signature.properties}" />
               <cxf:property key="passwordCallbackRef" value-ref="passwordCallbackHandler" />
            </cxf:ws-config>
         </cxf:ws-security>
      </cxf:proxy-service>
      <flow-ref doc:name="Copy HTTP Headers" name="Copy-Headers" />
      <cxf:proxy-client doc:name="Proxy client"
         enableMuleSoapHeaders="false" payload="envelope" />
      <outbound-endpoint doc:name="Password protected code-first endpoint"
         ref="Endpoint-Signature-CodeFirst" exchange-pattern="request-response" />
      <flow-ref doc:name="Copy HTTP Headers" name="Copy-Headers" />
      <logger message="Ends the signed proxy endpoint flow" level="INFO"
         doc:name="Logger" />
   </sub-flow>

</mule>
