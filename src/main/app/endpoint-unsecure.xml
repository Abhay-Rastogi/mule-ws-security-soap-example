<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns:pattern="http://www.mulesoft.org/schema/mule/pattern"
	xmlns:ws="http://www.mulesoft.org/schema/mule/ws" xmlns:mulexml="http://www.mulesoft.org/schema/mule/xml"
	xmlns:cxf="http://www.mulesoft.org/schema/mule/cxf" xmlns:http="http://www.mulesoft.org/schema/mule/http"
	xmlns:servlet="http://www.mulesoft.org/schema/mule/servlet" xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:spring="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.mulesoft.org/schema/mule/pattern http://www.mulesoft.org/schema/mule/pattern/current/mule-pattern.xsd
http://www.mulesoft.org/schema/mule/xml http://www.mulesoft.org/schema/mule/xml/current/mule-xml.xsd
http://www.mulesoft.org/schema/mule/cxf http://www.mulesoft.org/schema/mule/cxf/current/mule-cxf.xsd
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
http://www.mulesoft.org/schema/mule/servlet http://www.mulesoft.org/schema/mule/servlet/current/mule-servlet.xsd
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd
http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/ws http://www.mulesoft.org/schema/mule/ws/current/mule-ws.xsd">

	<flow name="Endpoint-Unsecure-CodeFirst-Flow">
		<http:listener config-ref="Listener-Application"
			doc:name="HTTP Inbound Endpoint" path="${endpoint.unsecure.codeFirst.path}" />

		<flow-ref name="Endpoint-Unsecure-CodeFirst-Endpoint"
			doc:name="Send to endpoint" />
	</flow>
	<sub-flow name="Endpoint-Unsecure-CodeFirst-Endpoint">
        <logger message="Begins the unsecure Code-First endpoint flow" level="INFO" doc:name="Logger"/>
		<cxf:jaxws-service validationEnabled="${endpoint.validation}"
			doc:name="Code-First endpoint interface" serviceClass="${endpoint.unsecure.codeFirst.interface.class}"
			namespace="${wsdl.namespace}" />
		<component doc:name="Code-First endpoint implementation">
			<spring-object bean="codeFirstUnsecureEndpoint" />
		</component>
        <logger message="Ends the unsecure Code-First endpoint flow" level="INFO" doc:name="Logger"/>
	</sub-flow>

	<flow name="Endpoint-Unsecure-WSDLFirst-Flow">
		<http:listener config-ref="Listener-Application"
			doc:name="HTTP Inbound Endpoint" path="${endpoint.unsecure.wsdlFirst.path}" />

		<flow-ref name="Endpoint-Unsecure-WSDLFirst-Endpoint"
			doc:name="Send to endpoint" />
	</flow>
	<sub-flow name="Endpoint-Unsecure-WSDLFirst-Endpoint">
        <logger message="Begins the unsecure WSDL-First endpoint flow" level="INFO" doc:name="Logger"/>
		<cxf:jaxws-service validationEnabled="${endpoint.validation}"
			doc:name="WSDL-First endpoint interface" serviceClass="${endpoint.unsecure.wsdlFirst.interface.class}"
			namespace="${wsdl.namespace}" wsdlLocation="${wsdl.path}"
			service="${wsdl.service}" />
		<component doc:name="WSDL-First endpoint implementation">
			<spring-object bean="wsdlFirstUnsecureEndpoint" />
		</component>
        <logger message="Ends the unsecure WSDL-First endpoint flow" level="INFO" doc:name="Logger"/>
	</sub-flow>

	<flow name="Endpoint-Unsecure-Simple-Flow">
		<http:listener config-ref="Listener-Application"
			path="${endpoint.unsecure.simple.path}" doc:name="HTTP Inbound Endpoint" />

		<flow-ref name="Endpoint-Unsecure-Simple-Endpoint" doc:name="Send to endpoint" />
	</flow>
	<sub-flow name="Endpoint-Unsecure-Simple-Endpoint">
        <logger message="Begins the unsecure simple endpoint flow" level="INFO" doc:name="Logger"/>
		<cxf:simple-service serviceClass="${endpoint.unsecure.simple.class}"
			service="${wsdl.service}" doc:name="Simple endpoint" />
		<component doc:name="Simple endpoint implementation">
			<spring-object bean="simpleUnsecureEndpoint" />
		</component>
        <logger message="Ends the unsecure simple endpoint flow" level="INFO" doc:name="Logger"/>
	</sub-flow>

	<flow name="Endpoint-Unsecure-Proxy-Flow">
		<http:listener config-ref="Listener-Application"
			doc:name="HTTP Inbound Endpoint" path="${endpoint.unsecure.proxy.path}" />

		<flow-ref name="Endpoint-Unsecure-Proxy-Endpoint" doc:name="Send to endpoint" />
	</flow>
	<sub-flow name="Endpoint-Unsecure-Proxy-Endpoint">
        <logger message="Begins the unsecure proxy endpoint flow" level="INFO" doc:name="Logger"/>
		<cxf:proxy-service namespace="${wsdl.namespace}"
			payload="envelope" port="${wsdl.port}" service="${wsdl.service}"
			doc:name="Proxy endpoint" wsdlLocation="${wsdl.path}"
			enableMuleSoapHeaders="false" />
		<flow-ref doc:name="Copy HTTP Headers" name="CopyHeaders" />
		<cxf:proxy-client doc:name="Proxy client"
			enableMuleSoapHeaders="false" payload="envelope" />
		<outbound-endpoint doc:name="Unsecure code-first endpoint" ref="Endpoint-Unsecure-CodeFirst"
			exchange-pattern="request-response" />

		<flow-ref doc:name="Copy HTTP Headers" name="CopyHeaders" />
        <logger message="Ends the unsecure proxy endpoint flow" level="INFO" doc:name="Logger"/>
	</sub-flow>

	<flow name="Endpoint-Unsecure-Consumer-Flow">
		<http:listener config-ref="Listener-Application"
			doc:name="HTTP Inbound Endpoint" path="${endpoint.unsecure.consumer.path}" />
		<flow-ref name="Endpoint-Unsecure-Consumer-Endpoint" doc:name="Send to endpoint" />
	</flow>
	<sub-flow name="Endpoint-Unsecure-Consumer-Endpoint">
        <logger message="Begins the unsecure consumer endpoint flow" level="INFO" doc:name="Logger"/>
		<flow-ref name="Transform-ConsumerRequest" doc:name="Transform to a valid request" />
		<ws:consumer config-ref="Consumer-Unsecure-CodeFirst"
			operation="${wsdl.operation}" doc:name="Unsecure code-first consumer" />
		<mulexml:dom-to-xml-transformer
			doc:name="Object to XML" />
        <logger message="Ends the unsecure consumer endpoint flow" level="INFO" doc:name="Logger"/>
	</sub-flow>

</mule>
