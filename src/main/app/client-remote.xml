<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns:pattern="http://www.mulesoft.org/schema/mule/pattern"
	xmlns:ws="http://www.mulesoft.org/schema/mule/ws" xmlns:mulexml="http://www.mulesoft.org/schema/mule/xml"
	xmlns:cxf="http://www.mulesoft.org/schema/mule/cxf" xmlns:http="http://www.mulesoft.org/schema/mule/http"
	xmlns:servlet="http://www.mulesoft.org/schema/mule/servlet" xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:spring="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.mulesoft.org/schema/mule/pattern http://www.mulesoft.org/schema/mule/pattern/current/mule-pattern.xsd
http://www.mulesoft.org/schema/mule/xml http://www.mulesoft.org/schema/mule/xml/current/mule-xml.xsd
http://www.mulesoft.org/schema/mule/cxf http://www.mulesoft.org/schema/mule/cxf/current/mule-cxf.xsd
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
http://www.mulesoft.org/schema/mule/servlet http://www.mulesoft.org/schema/mule/servlet/current/mule-servlet.xsd
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd
http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/ws http://www.mulesoft.org/schema/mule/ws/current/mule-ws.xsd">

	<flow name="HTTPClient-Remote-WSDLFirst-Flow">
		<http:listener config-ref="Listener-Application" path="${client.remote.path}"
			doc:name="HTTP Inbound Endpoint" />
		<flow-ref name="ReadHTTPVariables-Remote" doc:name="Read HTPP variables" />
		<flow-ref name="HTTPClient-Remote-WSDLFirst-Endpoint"
			doc:name="Remote WSDL-First client" />
		<response>
			<mulexml:object-to-xml-transformer
				doc:name="Object to XML" />
		</response>
	</flow>

	<sub-flow name="HTTPClient-Remote-WSDLFirst-Endpoint">
		<cxf:jaxws-client clientClass="${client.remote.wsdlFirst.class}"
			wsdlLocation="${wsdl.remote.path}" port="${wsdl.remote.port}"
			doc:name="WSDL-First remote client" operation="${wsdl.remote.operation}" />
		<outbound-endpoint doc:name="Remote WS" ref="Remote-WS" />
	</sub-flow>

	<flow name="HTTPClient-Remote-Consumer-Flow">
		<http:listener config-ref="Listener-Application"
			path="${client.remote.consumer.path}" doc:name="HTTP Inbound Endpoint" />
		<flow-ref name="ReadHTTPVariables-Remote" doc:name="Read HTPP variables" />
		<flow-ref name="HTTPClient-Remote-Consumer-Endpoint"
			doc:name="Consumer for remote service" />
		<response>
			<flow-ref name="Transform-Response-Remote" doc:name="Transform to a valid response" />
		</response>
	</flow>

	<sub-flow name="HTTPClient-Remote-Consumer-Endpoint">
		<flow-ref name="Transform-RemoteHTTP-ConsumerSOAP" doc:name="Transform to a valid request" />
		<ws:consumer config-ref="WS-Consumer-Remote" operation="${wsdl.remote.operation}"
			doc:name="Remote WS consumer" />
	</sub-flow>

</mule>
