<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns:jms="http://www.mulesoft.org/schema/mule/jms"
	xmlns:pattern="http://www.mulesoft.org/schema/mule/pattern" xmlns:ws="http://www.mulesoft.org/schema/mule/ws"
	xmlns:mulexml="http://www.mulesoft.org/schema/mule/xml" xmlns:cxf="http://www.mulesoft.org/schema/mule/cxf"
	xmlns:http="http://www.mulesoft.org/schema/mule/http" xmlns:servlet="http://www.mulesoft.org/schema/mule/servlet"
	xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:spring="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.mulesoft.org/schema/mule/jms http://www.mulesoft.org/schema/mule/jms/current/mule-jms.xsd
http://www.mulesoft.org/schema/mule/pattern http://www.mulesoft.org/schema/mule/pattern/current/mule-pattern.xsd
http://www.mulesoft.org/schema/mule/xml http://www.mulesoft.org/schema/mule/xml/current/mule-xml.xsd
http://www.mulesoft.org/schema/mule/cxf http://www.mulesoft.org/schema/mule/cxf/current/mule-cxf.xsd
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
http://www.mulesoft.org/schema/mule/servlet http://www.mulesoft.org/schema/mule/servlet/current/mule-servlet.xsd
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd
http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/ws http://www.mulesoft.org/schema/mule/ws/current/mule-ws.xsd">

	<flow name="Client-Encryption-CodeFirst-HTTP-Listener">
		<http:listener config-ref="Listener-Application"
			path="${client.encryption.codeFirst.path}" doc:name="HTTP Inbound Endpoint" />
		<flow-ref name="Read-HTTP-Variables" doc:name="Read HTPP variables" />
		<flow-ref name="Client-Encryption-CodeFirst-Endpoint"
			doc:name="Send request" />
		<response>
         <flow-ref name="Transform-Response" doc:name="Transform to a valid response" />
		</response>
	</flow>
	<sub-flow name="Client-Encryption-CodeFirst-Endpoint">
		<logger message="Begins the encrypted Code-First client flow"
			level="INFO" doc:name="Logger" />
		<cxf:jaxws-client serviceClass="${endpoint.codeFirst.interface}"
			doc:name="Code-First client" operation="${wsdl.operation}">
			<cxf:ws-security>
				<cxf:ws-config>
					<cxf:property key="action" value="UsernameToken Encrypt" />
					<cxf:property key="encryptionPropFile" value="${security.encryption.properties}" />
               <cxf:property key="user" value="${keystore.alias}" />
               <cxf:property key="encryptionUser" value="${keystore.alias}" />
               <cxf:property key="passwordCallbackRef" value-ref="passwordCallbackHandler" />
				</cxf:ws-config>
			</cxf:ws-security>
		</cxf:jaxws-client>
		<outbound-endpoint doc:name="Encrypted Code-First endpoint"
			ref="Endpoint-Encryption-CodeFirst" />
		<logger message="Ends the encrypted Code-First client flow"
			level="INFO" doc:name="Logger" />
	</sub-flow>

	<flow name="Client-Encryption-WSDLFirst-HTTP-Listener">
		<http:listener config-ref="Listener-Application"
			path="${client.encryption.wsdlFirst.path}" doc:name="HTTP Inbound Endpoint" />
		<flow-ref name="Read-HTTP-Variables" doc:name="Read HTPP variables" />
		<flow-ref name="Client-Encryption-WSDLFirst-Endpoint"
			doc:name="Send request" />
		<response>
			<flow-ref name="Transform-Response" doc:name="Transform to a valid response" />
		</response>
	</flow>
	<sub-flow name="Client-Encryption-WSDLFirst-Endpoint">
		<logger message="Begins the encrypted WSDL-First client flow"
			level="INFO" doc:name="Logger" />
		<cxf:jaxws-client clientClass="${client.wsdlFirst.class}"
			wsdlLocation="${wsdl.path}" port="${wsdl.port}" doc:name="WSDL-First client"
			operation="${wsdl.operation}">
			<cxf:ws-security>
            <cxf:ws-config>
               <cxf:property key="action" value="UsernameToken Encrypt" />
               <cxf:property key="encryptionPropFile" value="${security.encryption.properties}" />
               <cxf:property key="user" value="${keystore.alias}" />
               <cxf:property key="encryptionUser" value="${keystore.alias}" />
               <cxf:property key="passwordCallbackRef" value-ref="passwordCallbackHandler" />
            </cxf:ws-config>
			</cxf:ws-security>
		</cxf:jaxws-client>
		<outbound-endpoint doc:name="Encrypted WSDL-First endpoint"
			ref="Endpoint-Encryption-WSDLFirst" />
		<logger message="Ends the encrypted WSDL-First client flow"
			level="INFO" doc:name="Logger" />
	</sub-flow>

	<flow name="Client-Encryption-Simple-HTTP-Listener">
		<http:listener config-ref="Listener-Application"
			path="${client.encryption.simple.path}" doc:name="HTTP Inbound Endpoint" />
		<flow-ref name="Read-HTTP-Variables" doc:name="Read HTPP variables" />
		<flow-ref name="Client-Encryption-Simple-Endpoint" doc:name="Send request" />
		<response>
         <flow-ref name="Transform-Response" doc:name="Transform to a valid response" />
		</response>
	</flow>
	<sub-flow name="Client-Encryption-Simple-Endpoint">
		<logger message="Begins the encrypted simple client flow" level="INFO"
			doc:name="Logger" />
		<cxf:simple-client serviceClass="${endpoint.simple.class}"
			doc:name="Simple client" operation="${wsdl.operation}">
			<cxf:ws-security>
            <cxf:ws-config>
               <cxf:property key="action" value="UsernameToken Encrypt" />
               <cxf:property key="encryptionPropFile" value="${security.encryption.properties}" />
               <cxf:property key="user" value="${keystore.alias}" />
               <cxf:property key="encryptionUser" value="${keystore.alias}" />
               <cxf:property key="passwordCallbackRef" value-ref="passwordCallbackHandler" />
            </cxf:ws-config>
			</cxf:ws-security>
		</cxf:simple-client>
		<outbound-endpoint doc:name="Encrypted simple endpoint"
			ref="Endpoint-Encryption-Simple" />
		<logger message="Ends the encrypted simple client flow"
			level="INFO" doc:name="Logger" />
	</sub-flow>

	<flow name="Client-Encryption-Proxy-HTTP-Listener">
		<http:listener config-ref="Listener-Application"
			path="${client.encryption.proxy.path}" doc:name="HTTP Inbound Endpoint" />
		<flow-ref name="Read-HTTP-Variables" doc:name="Read HTPP variables" />
		<flow-ref name="Client-Encryption-Proxy-Endpoint" doc:name="Send request" />
		<response>
         <flow-ref name="Transform-Response" doc:name="Transform to a valid response" />
		</response>
	</flow>
	<sub-flow name="Client-Encryption-Proxy-Endpoint">
		<logger message="Begins the encrypted proxy client flow" level="INFO"
			doc:name="Logger" />
		<cxf:jaxws-client operation="${wsdl.operation}"
			serviceClass="${endpoint.codeFirst.interface}" doc:name="Code-First client">
			<cxf:ws-security>
            <cxf:ws-config>
               <cxf:property key="action" value="UsernameToken Encrypt" />
               <cxf:property key="encryptionPropFile" value="${security.encryption.properties}" />
               <cxf:property key="user" value="${keystore.alias}" />
               <cxf:property key="encryptionUser" value="${keystore.alias}" />
               <cxf:property key="passwordCallbackRef" value-ref="passwordCallbackHandler" />
            </cxf:ws-config>
			</cxf:ws-security>
		</cxf:jaxws-client>
		<outbound-endpoint ref="Endpoint-Encryption-Proxy"
			doc:name="Encrypted proxy endpoint" />
		<logger message="Ends the encrypted proxy client flow"
			level="INFO" doc:name="Logger" />
	</sub-flow>

	<flow name="Client-Encryption-Consumer-HTTP-Listener">
		<http:listener config-ref="Listener-Application"
			path="${client.encryption.consumer.path}" doc:name="HTTP Inbound Endpoint" />
		<flow-ref name="Read-HTTP-Variables" doc:name="Read HTPP variables" />
		<flow-ref name="Client-Encryption-Consumer-Endpoint" doc:name="Send request" />
		<response>
         <flow-ref name="Transform-Response" doc:name="Transform to a valid response" />
		</response>
	</flow>
	<sub-flow name="Client-Encryption-Consumer-Endpoint">
		<logger message="Begins the encrypted consumer client flow" level="INFO"
			doc:name="Logger" />
		<flow-ref name="Transform-Consumer-Request-Vars" doc:name="Transform to a valid request" />
		<ws:consumer config-ref="Consumer-Encryption-CodeFirst"
			operation="${wsdl.operation}" doc:name="Encrypted code-first consumer" />
		<logger message="Ends the encrypted consumer client flow"
			level="INFO" doc:name="Logger" />
	</sub-flow>

</mule>
